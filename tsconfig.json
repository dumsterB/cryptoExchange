{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "compilerOptions": {
        "baseUrl": "./",
        "module": "es6",
        "moduleResolution": "node",
        "isolatedModules": true,
        "paths": {
            "@/*": ["./src/*"],
        },
        "jsx": "preserve",
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
  }
  